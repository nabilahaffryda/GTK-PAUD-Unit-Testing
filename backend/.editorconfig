root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.php]
ij_php_keep_first_column_comment = true
ij_php_line_comment_add_space = true
ij_php_line_comment_at_first_column = false
